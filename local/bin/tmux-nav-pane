#!/usr/bin/env zsh

typeset -A opts
opts=( C-h -L C-j -D C-k -U C-l -L 'C-\' -l )

tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|\/)vim$'
is_vim_pane=$?
window_panes=`tmux display-message -p '#{window_panes}'`

if (( is_vim_pane == 0 || window_panes == 1 )); then
  tmux send-keys $1
else
  tmux select-pane $opts[$1]
fi
